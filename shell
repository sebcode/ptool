#!/bin/bash

function pt
{
    DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
    PTOOL="$DIR/ptool.php"

    $PTOOL $1

    DEVPATH=$($DIR/getpath.php)
    VAL="$DEVPATH/shell"

    test -f "$VAL" && {
        source "$VAL"
    }
}

function e
{
    TMPFILE=$((which gmktemp >/dev/null && gmktemp) || mktemp)
    ~/bin/e $* 2> $TMPFILE

    if [ ! `cat $TMPFILE` = "" ]; then
        F=$(cat $TMPFILE)

        if test -d "$F"; then
            cd "$F"
            rm -f $TMPFILE
            return
        fi

        D=$(dirname $(cat $TMPFILE))
        cd $D
        vim $F
    fi

    rm -f $TMPFILE
}

function g
{
    TMPFILE=$((which gmktemp >/dev/null && gmktemp) || mktemp)
    ~/bin/e $* 2> $TMPFILE

    if [ ! `cat $TMPFILE` = "" ]; then
        cd $(dirname $(cat $TMPFILE))
    fi

    rm -f $TMPFILE
}

alias N="e _NOTES_"

